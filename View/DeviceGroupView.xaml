<UserControl x:Class="AutomationStudio.View.DeviceGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutomationStudio.View"
             xmlns:base="clr-namespace:Automation.PluginCore.Base;assembly=Automation.PluginCore" 
             xmlns:behavior="clr-namespace:Automation.PluginCore.Util.Behavior;assembly=Automation.PluginCore" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ToolBar Grid.Row="0">
            <RibbonSplitButton SmallImageSource="/Automation.PluginCore;component/Image/plus.png" ItemsSource="{Binding Menu}">
                <RibbonSplitButton.ItemTemplate>
                    <DataTemplate>
                        <RibbonMenuItem Header="{Binding Name}" 
                                        Command="{Binding DataContext.CmdAppend, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                    </DataTemplate>
                </RibbonSplitButton.ItemTemplate>
            </RibbonSplitButton>
            <Button Command="{Binding CmdRemove}">
                <Image Width="20" Height="20" Source="/Automation.PluginCore;component/Image/remove.png"/>
            </Button>
            <Separator/>
            <Button Command="{Binding CmdSave}">
                <Image Width="20" Height="20" Source="/Automation.PluginCore;component/Image/save.png"/>
            </Button>
        </ToolBar>
        <TreeView Grid.Row="1" ItemsSource="{Binding Items}">
            <i:Interaction.Behaviors>
                <behavior:ItemsControlDragDropBehavior DropCommand="{Binding CmdDrop}" />
            </i:Interaction.Behaviors>
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemChanged">
                    <i:CallMethodAction MethodName="SelectedItemChanged" TargetObject="{Binding}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type base:NodeBase}" ItemsSource="{Binding Items}">
                    <StackPanel Orientation="Horizontal">
                        <Image Width="16" Height="16" Source="{Binding DisplayImage}"/>
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.Resources>
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                    <Setter Property="IsExpanded" Value="True" />
                </Style>
            </TreeView.ItemContainerStyle>
        </TreeView> 
    </Grid>
</UserControl>
